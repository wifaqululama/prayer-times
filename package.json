{
  "name": "@wifaqul-ulama/adhan",
  "description": "A fork of the High precision Islamic prayer time library, Adhan with Wifaqul Ulama methods and improvements for functional programming",
  "version": "4.4.3",
  "author": "Ameir Al-Zoubi <ameir@ameir.com>",
  "license": "MIT",
  "main": "lib/cjs/Adhan.js",
  "module": "lib/esm/Adhan.js",
  "types": "lib/types/Adhan.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/Adhan.d.ts",
      "import": "./lib/esm/Adhan.js",
      "require": "./lib/cjs/Adhan.js"
    }
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsdown",
    "test": "run-s -l test:*",
    "test:unit": "jest",
    "test:audit": "npm audit --omit=dev --audit-level=high",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint --max-warnings=0 .",
    "lint:tsc": "tsc --noEmit",
    "lint-fix": "npm-run-all -l -p lint-fix:* -s lint:tsc",
    "lint-fix:eslint": "eslint --max-warnings=0 --fix .",
    "commit": "cz",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wifaqululama/adhan.git"
  },
  "homepage": "https://github.com/wifaqululama/adhan",
  "keywords": [
    "adhan",
    "islam",
    "muslim",
    "prayer",
    "islamic",
    "prayer times",
    "salah",
    "salat",
    "salaat",
    "namaz"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@tsconfig/node22": "^22.0.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "babel-loader": "^10.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.6",
    "tsdown": "^0.19.0-beta.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "commitizen": {
      "minimist": "1.2.6"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
